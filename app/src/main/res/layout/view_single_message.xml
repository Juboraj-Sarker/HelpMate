<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/child_for_orientation_LAYOUT"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sender_full_child_LAYOUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:paddingRight="16dp"
            android:minWidth="50dp">

            <TextView
                android:id="@+id/sender_message_text_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kire ki obostha"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="20dp"
                android:paddingLeft="8dp"
                android:textSize="14sp"
                android:maxWidth="200dp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/sender_date_time_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 march: 5.7"
            android:textSize="10sp"
            android:layout_gravity="right"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="5dp"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/receiver_full_child_LAYOUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:minWidth="50dp">

            <TextView
                android:id="@+id/receiver_message_text_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="kire ki obostha"
                android:textColor="@color/colorWhite"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:textSize="14sp"
                android:maxWidth="200dp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/receiver_date_time_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 march: 5.7"
            android:textSize="10sp"
            android:maxWidth="200dp"
            android:gravity="left"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="5dp"
            android:visibility="gone"/>

    </LinearLayout>




</LinearLayout>